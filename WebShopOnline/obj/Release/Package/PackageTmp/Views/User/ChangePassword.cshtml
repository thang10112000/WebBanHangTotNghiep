@model Model.ViewModel.ChangePassword

@{
    ViewBag.Title = "Đổi mật khẩu";
    Layout = "~/Views/Shared/_Layouts.cshtml";
}

@section jsFooter{
    <script src="https://code.jquery.com/jquery-1.10.2.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.0/dist/js/bootstrap.bundle.min.js"></script>
    <link href="/Assets/Client/css/profile.css" rel="stylesheet" />
}
@using (Html.BeginForm("ChangePassword", "User", FormMethod.Post))
{
    <div class="body1">
        <div class="container">
            <div class="main-body1 ">

                <div class="row ">
                    <div class="col-md-4 mb-3">
                        <div class="card">
                            <div class="card-body">
                                <div class="d-flex flex-column align-items-center text-center">
                                    <img src="https://media.istockphoto.com/vectors/lock-reload-icon-on-white-background-vector-id943955978?k=20&m=943955978&s=612x612&w=0&h=GXhFYqCV9WUFkCVRp1wAo5jMjLbKfcgC-qfo3ilSk38=" alt="Admin" class="rounded-circle" width="120">
                                    <div class="mt-3">
                                        <h4 class="h41">Đổi mật khẩu</h4>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.AntiForgeryToken()
                    </div>
                    <div class="col-lg-8">
                        <div class="card">
                            <div class="card-body">

                                <div class="row mb-3">
                                    <div class="col-sm-3">

                                        <h6 class="mb-0 h61">Mật khẩu cũ</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        @Html.PasswordFor(model => model.Password, new { @class = "form1-control", @placeholder = "Nhập mật khẩu cũ..." })
                                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger p1" })
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0 h61">Mật khẩu mới</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        @Html.PasswordFor(model => model.NewPassword, new { @class = "form1-control", @placeholder = "Nhập mật khẩu mới..." })
                                        @Html.ValidationMessageFor(model => model.NewPassword, "", new { @class = "text-danger p1" })
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0 h61">Nhập lại mật khẩu mới</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        @Html.PasswordFor(model => model.ConfirmPassword, new { @class = "form1-control", @placeholder = "Nhập lại mật khẩu mới..." })
                                        @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger p1" })
                                    </div>
                                </div>
                                <div class="row mb-3">

                                    <div class="col-sm-9 text-secondary" style="text-align:center">
                                        @Html.ValidationSummary(true, "", new { @class = "text-danger p1" })
                                        @Html.HiddenFor(model => model.Id)
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-3"></div>
                                    <div class="col-sm-9 text-secondary">

                                        <input type="submit" class="btn1 btn1-primary px-4" value="Lưu">
                                        <a class="btn1 btn1-info " style="text-decoration: none" href="/thong-tin-tai-khoan">Quay lại</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}