@model Model.EF.User

@{
    ViewBag.Title = "Sửa thông tin người dùng";
    Layout = "~/Areas/Admin/Views/Shared/_Layouts.cshtml";
}

<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Sửa thông tin người dùng</h1>


    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Nhập thông tin người dùng</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <div class="table table-bordered" width="100%" cellspacing="0">

                    @using (Html.BeginForm("Edit", "User", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <hr />

                        <div class="form-group">
                            <div class="col-md-10">
                                @Html.PasswordFor(model => model.Password, new { @class = "form-control ", @placeholder = "Mật khẩu..." })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-10">
                                @Html.TextBoxFor(model => model.Name, new { @class = "form-control ", @placeholder = "Họ và tên..." })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-10">
                                @Html.TextBoxFor(model => model.Address, new { @class = "form-control ", @placeholder = "Địa chỉ..." })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-10">
                                @Html.TextBoxFor(model => model.Email, new { @class = "form-control ", @placeholder = "Email..." })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-10">
                                @Html.TextBoxFor(model => model.Phone, new { @class = "form-control ", @placeholder = "Số điện thoại..." })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-10">
                                @Html.TextBoxFor(model => model.GroupID, new { @class = "form-control ", @placeholder = "Loại tài khoản..." })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-10">
                                @Html.TextBoxFor(model => model.ModifiedBy, new { @class = "form-control ", @placeholder = "Người sửa..." })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-10">


                                @Html.CheckBoxFor(model => model.Status, new { htmlAttributes = new { @class = "form-control" } })  Trạng thái
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Lưu thông tin" class="btn btn-success btn-icon-split" />
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

</div>


