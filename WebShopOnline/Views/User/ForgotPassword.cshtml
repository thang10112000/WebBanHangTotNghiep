@model Model.EF.User
@{
    ViewBag.Title = "Quên mật khẩu";

}

@using BotDetect.Web.Mvc;

<link href="@BotDetect.Web.CaptchaUrls.Absolute.LayoutStyleSheetUrl"
      rel="stylesheet" type="text/css" />

@{ MvcCaptcha forgotpassword = new MvcCaptcha("forgotpassword");
    forgotpassword.UserInputID = "CaptchaCode"; }
@section jsFooter{

    <script src="~/Assets/Client/js/controller/badword.js"></script>
}
<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Quên mật khẩu</title>

    <!-- Custom fonts for this template-->
    <link href="/Assets/Admin/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
          rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="/Assets/Admin/css/sb-admin-2.min.css" rel="stylesheet">
</head>

<body class="bg-gradient-primary">

    <div class="container">

        <!-- Outer Row -->
        <div class="row justify-content-center">

            <div class="col-xl-10 col-lg-12 col-md-9">

                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                        <div class="row">
                            <div class="col-lg-6 d-none d-lg-block bg-password-image"></div>
                            <div class="col-lg-6">
                                <div class="p-5">
                                    <div class="text-center">
                                        <h1 class="h4 text-gray-900 mb-2">Quên mật khẩu?</h1>
                                        <p class="mb-4">
                                            Chúng tôi hiểu nó, mọi thứ sẽ xảy ra. Chỉ cần nhập địa chỉ email của bạn vào bên dưới và chúng tôi sẽ gửi cho bạn một liên kết để đặt lại mật khẩu của bạn!
                                        </p>
                                    </div>
                                    <div class="alert-danger">@ViewBag.Message</div>
                                    <form class="user " method="post" action="/User/ForgotPassword">
                                        <div class="input-group">
                                            @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                                        </div>

                                        <div class="form-group">
                                            <input type="text" class="form-control form-control-user"
                                                   id="quenmatkhau" name="email"
                                                   placeholder="Nhập Email đăng ký tài khoản...">
                                        </div>
                                        <div class="form-group">
                                            <div class="input-group">
                                                @Html.Captcha(forgotpassword)
                                                @Html.TextBox("CaptchaCode")
                                            </div>
                                        </div>
                                        <button id="forgotpassword" class="btn btn-primary btn-user btn-block" type="submit">
                                            Lấy lại mật khẩu
                                        </button>
                                    </form>
                                    <hr>
                                    <div class="text-center">
                                        <a class="small" href="/User/Register">Đăng ký thành viên!</a>
                                    </div>
                                    <div class="text-center">
                                        <a class="small" href="/User/Login">Bạn đã có tài khoản? Đăng nhập!</a>
                                    </div>
                                    <div class="text-center">
                                        <a class="small" href="/">Quay lại trang chủ</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap core JavaScript-->
    <script src="/Assets/Admin/vendor/jquery/jquery.min.js"></script>
    <script src="/Assets/Admin/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="/Assets/Admin/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="/Assets/Admin/js/sb-admin-2.min.js"></script>
</body>
</html>