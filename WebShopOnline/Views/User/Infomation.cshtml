@{
    ViewBag.Title = "Thông tin tài khoản";
    Layout = "~/Views/Shared/_Layouts.cshtml";
    var session = (WebShopOnline.UserLogin)Session[WebShopOnline.Common.CommonConstants.USER_SESSION];
}
@section jsFooter{
    <script src="https://code.jquery.com/jquery-1.10.2.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/js/bootstrap.bundle.min.js"></script>
    <link href="/Assets/Client/css/profile.css" rel="stylesheet" />
}
<div class="body1">
    <div class="container">
        <div class="main-body1">

            <div class="row gutters-sm">
                <div class="col-md-4 mb-3">
                    <div class="card">
                        <div class="card-body">
                            <div class="d-flex flex-column align-items-center text-center">
                                <img src="https://bootdey.com/img/Content/avatar/avatar7.png" alt="Admin" class="rounded-circle" width="120">
                                <div class="mt-3">
                                    <h4 class="h41"> @(session.Name!=null ? session.Name : "Chưa cập nhập")</h4>
                                    <p class="text-secondary mb-1 p1">@session.GroupID</p>
                                    <a class="btn1 btn1-info " style="text-decoration: none" href="/User/ChangePassword/@session.UserID">Đổi mật khẩu</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-8">
                    <div class="card mb-3 ">
                        <div class="card-body ">
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0 h61">Tài khoản</h6>
                                </div>
                                <div class="col-sm-9 text-secondary p1">
                                    @session.UserName
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0 h61">Email</h6>
                                </div>
                                <div class="col-sm-9 text-secondary p1">
                                    @(session.Email!=null ? session.Email : "Chưa cập nhập")
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0 h61">Số điện thoại</h6>
                                </div>
                                <div class="col-sm-9 text-secondary p1">
                                    @(session.Phone!=null ? session.Phone : "Chưa cập nhập")
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0 h61">Địa chỉ</h6>
                                </div>
                                <div class="col-sm-9 text-secondary p1">
                                    @(session.Address!=null ? session.Address : "Chưa cập nhập")
                                </div>
                            </div>

                            <hr>
                            <div class="row">
                                <div class="col-sm-12">
                                    <a class="btn1 btn1-primary " style="text-decoration: none" href="/User/ChangeProflle/@session.UserID">Cập nhập tài khoản</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>